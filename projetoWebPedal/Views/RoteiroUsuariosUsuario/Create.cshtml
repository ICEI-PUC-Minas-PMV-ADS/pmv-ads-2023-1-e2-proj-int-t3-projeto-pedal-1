@model projetoWebPedal.Models.RoteiroUsuario

@{
    ViewData["Title"] = "Create";
}

<h1>Nova Adesão</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Nome</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoteiroId" class="control-label">Roteiro</label>
                <select asp-for="RoteiroId" class="form-control" asp-items="ViewBag.RoteiroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label">Peso</label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

