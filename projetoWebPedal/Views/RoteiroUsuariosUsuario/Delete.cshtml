}

<h1>Excluir Adesão</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Roteiro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roteiro.Local)
